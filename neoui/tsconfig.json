{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@joe111/neo-ui": ["./src/index"]
    },
    "types": ["react-native", "jest"]
  },
  "include": ["src/**/*", "scripts/**/*", "**/__tests__/**/*"],
  "exclude": ["node_modules", "lib", "example"]
}
