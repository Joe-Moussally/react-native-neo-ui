{
  "name": "@joe111/neo-ui",
  "version": "1.3.6",
  "description": "A modern React Native UI library",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/index.d.ts",
      "import": "./lib/module/index.js",
      "default": "./lib/module/index.js"
    },
    "./Alert": {
      "source": "./src/components/Alert/index.tsx",
      "types": "./lib/typescript/components/Alert/index.d.ts",
      "default": "./lib/module/components/Alert/index.js"
    },
    "./Avatar": {
      "source": "./src/components/Avatar/index.tsx",
      "types": "./lib/typescript/components/Avatar/index.d.ts",
      "default": "./lib/module/components/Avatar/index.js"
    },
    "./Badge": {
      "source": "./src/components/Badge/index.tsx",
      "types": "./lib/typescript/components/Badge/index.d.ts",
      "default": "./lib/module/components/Badge/index.js"
    },
    "./Box": {
      "source": "./src/components/Box/index.tsx",
      "types": "./lib/typescript/components/Box/index.d.ts",
      "default": "./lib/module/components/Box/index.js"
    },
    "./Button": {
      "source": "./src/components/Button/index.tsx",
      "types": "./lib/typescript/components/Button/index.d.ts",
      "default": "./lib/module/components/Button/index.js"
    },
    "./Chip": {
      "source": "./src/components/Chip/index.tsx",
      "types": "./lib/typescript/components/Chip/index.d.ts",
      "default": "./lib/module/components/Chip/index.js"
    },
    "./ParallaxScrollView": {
      "source": "./src/components/ParallaxScrollView.tsx",
      "types": "./lib/typescript/components/ParallaxScrollView.d.ts",
      "default": "./lib/module/components/ParallaxScrollView.js"
    },
    "./Rating": {
      "source": "./src/components/Rating/index.tsx",
      "types": "./lib/typescript/components/Rating/index.d.ts",
      "default": "./lib/module/components/Rating/index.js"
    },
    "./Skeleton": {
      "source": "./src/components/Skeleton/index.tsx",
      "types": "./lib/typescript/components/Skeleton/index.d.ts",
      "default": "./lib/module/components/Skeleton/index.js"
    },
    "./TextField": {
      "source": "./src/components/TextField/index.tsx",
      "types": "./lib/typescript/components/TextField/index.d.ts",
      "default": "./lib/module/components/TextField/index.js"
    },
    "./ThemedText": {
      "source": "./src/components/ThemedText.tsx",
      "types": "./lib/typescript/components/ThemedText.d.ts",
      "default": "./lib/module/components/ThemedText.js"
    },
    "./ThemedView": {
      "source": "./src/components/ThemedView.tsx",
      "types": "./lib/typescript/components/ThemedView.d.ts",
      "default": "./lib/module/components/ThemedView.js"
    },
    "./Ticker": {
      "source": "./src/components/Ticker/index.tsx",
      "types": "./lib/typescript/components/Ticker/index.d.ts",
      "default": "./lib/module/components/Ticker/index.js"
    },
    "./Toast": {
      "source": "./src/components/Toast/index.tsx",
      "types": "./lib/typescript/components/Toast/index.d.ts",
      "default": "./lib/module/components/Toast/index.js"
    },
    "./Typography": {
      "source": "./src/components/Typography/index.tsx",
      "types": "./lib/typescript/components/Typography/index.d.ts",
      "default": "./lib/module/components/Typography/index.js"
    },
    "./theme": {
      "source": "./src/theme/index.ts",
      "types": "./lib/typescript/theme/index.d.ts",
      "default": "./lib/module/theme/index.js"
    },
    "./navigation": {
      "source": "./src/navigation/index.ts",
      "types": "./lib/typescript/navigation/index.d.ts",
      "default": "./lib/module/navigation/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace @joe111/neo-ui-example",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "build": "npm run clean && bob build",
    "semantic-release": "semantic-release",
    "dev": "node scripts/dev.js"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Joe-Moussally/react-native-neo-ui.git"
  },
  "author": "Joe Moussally <joemoussally111@gmail.com> (https://github.com/Joe-Moussally)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Joe-Moussally/react-native-neo-ui/issues"
  },
  "homepage": "https://github.com/Joe-Moussally/react-native-neo-ui#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/babel-preset": "0.78.2",
    "@react-native/eslint-config": "^0.78.0",
    "@release-it/conventional-changelog": "^9.0.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.0.12",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "prettier": "^3.0.3",
    "react": "19.0.0",
    "react-native": "0.79.3",
    "react-native-builder-bob": "^0.30.0",
    "release-it": "^17.10.0",
    "semantic-release": "^24.2.5",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.6",
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.10.0",
    "react-native-svg": "^15.12.0"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|react-native-.*|@react-navigation)/)"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.types.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.50.3"
  }
}
